<%- layout('layouts/main') %>
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card text-black bg-light mb-3 text-center" style="margin-top: 50px;">
                <div class="card-header">
                    <h3>Sign In</h3>
                </div>
                    <div class="card-body">
                        <form action="/signin" method="POST" >
                            <div class="formgroup" style="padding: 10px;">
                                <input type="email" name="email" placeholder="Insert Email" 
                                class="form-control">
                            </div>
                            <div class="formgroup" style="padding: 10px;">
                                <input type="password" name="password" placeholder="Insert password" 
                                class="form-control">
                            </div>                        
                            <button type="submit" class="btn btn-info btn-block mt.4" style="margin-top: 30px;">
                                Sign In
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
